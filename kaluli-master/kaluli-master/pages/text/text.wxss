.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.input-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.text-input {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.button-section {
  margin: 40rpx 0;
}

.submit-button {
  background-color: #007AFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 80%;
}

.submit-button[disabled] {
  background-color: #ccc !important;
  color: #fff !important;
}

.tips-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.tips-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

/* 无法识别提示样式 */
.unrecognized-container {
  margin-top: 40rpx;
}

.unrecognized-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.unrecognized-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  text-align: center;
}

.unrecognized-emoji {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.unrecognized-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.unrecognized-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.retry-btn {
  width: 100%;
  height: 88rpx;
  background: #007AFF;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
  opacity: 0.9;
} 