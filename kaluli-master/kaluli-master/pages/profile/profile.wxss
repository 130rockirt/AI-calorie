.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20px;
}

/* 表单样式 */
.profile-form {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.form-header {
  margin-bottom: 30px;
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.form-group {
  margin-bottom: 30px;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.input {
  width: 100%;
  height: 44px;
  background: #f8f8f8;
  border-radius: 8px;
  padding: 0 16px;
  font-size: 16px;
  color: #333;
  box-sizing: border-box;
  border: 1px solid #e0e0e0;
}

.radio-item {
  margin-right: 30px;
  font-size: 16px;
  color: #333;
}

.picker {
  width: 100%;
  height: 44px;
  background: #f8f8f8;
  border-radius: 8px;
  padding: 0 16px;
  font-size: 16px;
  color: #333;
  box-sizing: border-box;
  border: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
}

.submit-btn {
  width: 100%;
  height: 48px;
  background: #007AFF;
  color: white;
  border-radius: 24px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.2);
}

/* 信息展示样式 */
.info-card {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.6;
}

.edit-btn image {
  width: 18px;
  height: 18px;
}

.calories-info {
  text-align: center;
  margin: 30px 0;
}

.calories-value {
  font-size: 48px;
  font-weight: bold;
  color: #007AFF;
}

.calories-unit {
  font-size: 16px;
  color: #007AFF;
  margin-left: 4px;
}

.details {
  background: #f8f8f8;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 24px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 14px;
  color: #666;
}

.detail-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.user-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.stat-item {
  background: #f8f8f8;
  border-radius: 12px;
  padding: 16px;
  text-align: center;
}

.stat-label {
  font-size: 12px;
  color: #666;
  display: block;
  margin-bottom: 4px;
}

.stat-value {
  font-size: 16px;
  color: #333;
  font-weight: 500;
}

/* 日历卡片样式 */
.calendar-card {
  background: white;
  border-radius: 20px;
  padding: 24px;
  margin-top: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

.month-selector {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-top: 8px;
}

.arrow {
  font-size: 16px;
  color: #666;
  padding: 4px 8px;
  cursor: pointer;
}

.current-month {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.calendar {
  margin-top: 20px;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 8px;
}

.weekday {
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 8px 0;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8px;
}

.day {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  background: #f8f8f8;
  position: relative;
  cursor: pointer;
}

.day.other-month {
  opacity: 0.3;
}

.day-number {
  font-size: 14px;
  font-weight: 500;
  color: #333;
}

/* 不同状态的颜色 */
.day.excess {
  background: rgba(255, 59, 48, 0.2);
}

.day.excess .day-number {
  color: #FF3B30;
}

.day.normal {
  background: rgba(40, 205, 65, 0.2);
}

.day.normal .day-number {
  color: #28CD41;
}

/* 图例样式 */
.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 3px;
}

.legend-color.excess {
  background: rgba(255, 59, 48, 0.2);
}

.legend-color.normal {
  background: rgba(40, 205, 65, 0.2);
}

.legend-item text {
  font-size: 12px;
  color: #666;
}

/* 食物列表弹出层样式 */
.food-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.food-popup.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.food-list-container {
  width: 85%;
  max-height: 80vh;
  background: white;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
}

.food-list-header {
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
}

.food-list-date {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.close-btn {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #999;
  cursor: pointer;
}

/* 添加当天总摄入量样式 */
.daily-total {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  background: #f8f8f8;
  border-bottom: 1px solid #f0f0f0;
}

.total-item {
  flex: 1;
  text-align: center;
}

.total-divider {
  width: 1px;
  height: 30px;
  background: #e0e0e0;
  margin: 0 20px;
}

.total-label {
  font-size: 14px;
  color: #666;
  display: block;
  margin-bottom: 4px;
}

.total-value {
  font-size: 20px;
  color: #333;
  font-weight: 500;
}

.food-list {
  flex: 1;
  max-height: calc(80vh - 180px);
  padding: 0 20px;
  box-sizing: border-box;
}

.food-item {
  display: flex;
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.food-item:last-child {
  border-bottom: none;
}

.food-item:active {
  background: #f8f8f8;
}

.food-image {
  width: 60px;
  height: 60px;
  border-radius: 10px;
  margin-right: 15px;
}

.food-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0; /* 防止文本溢出 */
}

.food-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.food-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.food-time {
  font-size: 14px;
  color: #999;
}

.food-stats {
  display: flex;
  gap: 10px;
}

.food-calories {
  font-size: 14px;
  color: #007AFF;
}

.food-protein {
  font-size: 14px;
  color: #28CD41;
}

.empty-list {
  padding: 40px 0;
  text-align: center;
  color: #999;
  font-size: 14px;
} 